@model IEnumerable<SalesWebApp.Models.SalesOrder>

@{
    ViewBag.Title = "Index";
}

<h1 class="h3 mb-2 text-gray-800">Sales Order List</h1>
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <div class="col-md-offset-2 col-md-2">
            @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary btn-user btn-block" })
        </div>
    </div>
    <div class="card-body">
        <table class="table table-bordered" id="dataTable" cellspacing="0">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.SalesOrderNo)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CardCode)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CardName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DocDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DocDueDate)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.SalesOrderNo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CardCode)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CardName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DocDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DocDueDate)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>
